gitname=s3fs-c
pkgname=${gitname}-git
pkgver=20130415
pkgrel=1
pkgdesc="Fork of s3fs compatible with other clients"
arch=('i686' 'x86_64')
url="https://github.com/tongwang/s3fs-c"
license=('GPL2')
depends=('fuse' 'glib2' 'libxml++')
makedepends=('git')
conflicts=('s3fs')
provides=('s3fs')
source=("git+${url}.git")
md5sums=('SKIP')

build() {
	 cd "${srcdir}/${gitname}"
	 ./configure --prefix=/usr || return 1
	 make || return 1
}

package() {
	 cd "${srcdir}/${gitname}"
	 make DESTDIR="${pkgdir}/" install
}
